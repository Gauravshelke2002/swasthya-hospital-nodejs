<%-include("navbar.ejs")%>

<form
  action="/admin/save_main_slider"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>Main Slider</h3>
      </div>
      <div class="col-md-12 mt-3">
        slider Image
        <input type="file" name="slider_image" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save Main Slider</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
  <div class="row">
      <div class="col-md-12 mt-5">
          <h3>Slider Image</h3>
          <table class="table table-bordered table-sm table-striped mt-4">
          <tr>
              <th>ACTION</th>
              <th>SN</th>
              <TH>Slider Image</TH>
             

          </tr>
          <%
          for(i=0;i<main_slider.length;i++)
          {
              %>
               <tr>
                  <td>
                      <a href="/admin/edit_main_slider/<%=main_slider[i]._id%>">
                          <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                              <i class="fa fa-pencil"></i>
                          </button>
                      </a>
                      <a href="/admin/delete_main_slider/<%=main_slider[i]._id%>" onclick="return confirm('Are You Sure...')">
                          <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                              <i class="fa fa-trash"></i>
                          </button>
                      </a>
                  </td>
                  <td><%=i+1%></td>
                  <td>
                      <img src="/uploads/<%=main_slider[i].slider_image%>" width="300px" height="100px" >
                     
                      </td>
                 


               </tr>
              <%
          }
          %>
      </table>
      </div>
  </div>
</div>


<%-include("footer.ejs")%>
