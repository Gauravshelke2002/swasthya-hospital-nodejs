<%-include("navbar.ejs")%>

<form
  action="/admin/save_home_vision"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>home vision</h3>
      </div>
      <div class="col-md-12 mt-3">
        Image
        <input type="file" name="image" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        Title
        <input type="text" name="title" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        Desc
        <textarea name="desc" class="form-control"></textarea>
      </div>
      <div class="col-md-12 mt-3">
        h1
        <input type="text" name="h1" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        p1
        <input type="text" name="p1" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        h2
        <input type="text" name="h2" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        p2
        <input type="text" name="p2" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save home vision</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>home vision</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH> Image</TH>
                <th>Title</th>
                <th>desc</th>
                <th>h1</th>
                <th>p1</th>
                <th>h2</th>
                <th>p2</th>


               
  
            </tr>
            <%
            for(i=0;i<home_vision.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_home_vision/<%=home_vision[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_home_vision/<%=home_vision[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=home_vision[i].image%>" width="150px" height="100px" >
                       
                        </td>
                    <td><%=home_vision[i].title%></td>

                    
                    <td><%=home_vision[i].desc%></td>
                    <td><%=home_vision[i].h1%></td>
                    <td><%=home_vision[i].p1%></td>
                    <td><%=home_vision[i].h2%></td>
                    <td><%=home_vision[i].p2%></td>

                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>

<%-include("footer.ejs")%>