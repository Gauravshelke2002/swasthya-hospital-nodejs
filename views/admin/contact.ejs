<%-include("navbar.ejs")%>

<form
  action="/admin/save_contact"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>contact</h3>
      </div>
      <div class="col-md-12 mt-3">
        Address
        <textarea name="address" class="form-control"></textarea>
      </div>
      <div class="col-md-12 mt-3">
        email
        <input type="email" name="email" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        Phone
        <input type="text" name="phone" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save Contact</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>contact list</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>Address</TH>
                <th>Email</th>
                <th>Phone</th>
               
  
            </tr>
            <%
            for(i=0;i<contact.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_contact/<%=contact[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_contact/<%=contact[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td><%=contact[i].address%></td>

                    
                    <td><%=contact[i].email%></td>
                    <td><%=contact[i].phone%></td>

                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>

<%-include("footer.ejs")%>