<%-include("navbar.ejs")%>

<form
  action="/admin/save_cardiology_part2"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>cardiology part2</h3>
      </div>
      <div class="col-md-12 mt-3">
        image
        <input type="file" name="image" class="form-control" />
      </div>
      
      <div class="col-md-12 mt-3">
        name
        <textarea name="name" class="form-control"></textarea>
      </div>
      <div class="col-md-12 mt-3">
        number
        <input type="number" name="no" class="form-control" />
      </div>
      
      
      
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save cardiology part2</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Cardiology part2</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>Image</TH>
                <th>Name</th>
                <th>Number</th>

                

               
  
            </tr>
            <%
            for(i=0;i<cardiology_part2.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_cardiology_part2/<%=cardiology_part2[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_cardiology_part2/<%=cardiology_part2[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=cardiology_part2[i].image%>" width="80px" height="70px" >

                    </td>
                    <td><%=cardiology_part2[i].name%></td>

                        <td><%=cardiology_part2[i].no%></td>
                       



                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>
  


<%-include("footer.ejs")%>