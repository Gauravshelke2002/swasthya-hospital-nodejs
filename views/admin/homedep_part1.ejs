<%-include("navbar.ejs")%>

<form
  action="/admin/save_homedep_part1"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>home dep part1</h3>
      </div>
      <div class="col-md-12 mt-3">
        image
        <input type="file" name="image" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        title
        <input type="text" name="title" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save homedep_part1</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>home dep part1</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH> Image</TH>
                <th>Title</th>
               
  
            </tr>
            <%
            for(i=0;i<homedeppart1.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_homedeppart1/<%=homedeppart1[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_homedeppart1/<%=homedeppart1[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=homedeppart1[i].image%>" width="300px" height="100px" >
                       
                        </td>
                    <td><%=homedeppart1[i].title%></td>
                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>

<%-include("footer.ejs")%>