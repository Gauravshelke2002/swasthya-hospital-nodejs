<%-include("navbar.ejs")%>

<form
  action="/admin/save_home_stat"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>home stat</h3>
      </div>
      <div class="col-md-12 mt-3">
        N1
        <input type="number" name="n1" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        title
        <input type="text" name="title" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save home stat</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>home stat</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH> Number</TH>
                <th>Title</th>
               
  
            </tr>
            <%
            for(i=0;i<home_stat.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_home_stat/<%=home_stat[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_home_stat/<%=home_stat[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td><%=home_stat[i].n1%></td>

                    
                    <td><%=home_stat[i].title%></td>
                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>

<%-include("footer.ejs")%>