<%-include("navbar.ejs")%>

<form
  action="/admin/save_home_facility"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container p-4 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3>Home Facilities</h3>
      </div>
      <div class="col-md-12 mt-3">
        Icon
        <input type="text" name="icon" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        heading
        <input type="text" name="heading" class="form-control" />
      </div>
      <div class="col-md-12 mt-3">
        Desc
        <input type="text" name="desc" class="form-control" />
      </div>
      <div class="col-md-12 mt-3 text-center">
        <button class="btn btn-primary">Save Home Facilities</button>
     </div>
    </div>
  </div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Home Facility</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>Icon</TH>
                <th>Heading</th>
                <th>Desc</th>
               
  
            </tr>
            <%
            for(i=0;i<home_facility.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_home_facility/<%=home_facility[i]._id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_home_facility/<%=home_facility[i]._id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td><%=home_facility[i].icon%></td>
                    <td> <%=home_facility[i].heading%> </td>
                    <td> <%=home_facility[i].desc%> </td>
                   
  
  
                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
  </div>
  

<%-include("footer.ejs")%>