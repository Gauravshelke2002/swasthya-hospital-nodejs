 <!-- body start -->

 <div class="container-fluid">
    <div class="row">
     <div class="col-12 p-0  Contact_page_banner">
       <h1 class="ml-5 mt-5">Contact Us</h1>
       <li class="d-inline-block " style="margin-left:50px">Home</li>
       <li class="d-inline-block ml-3"><i class="fa-solid fa-chevron-right"></i></li>
       <li class="d-inline-block ml-3"> Contact</li>
     </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class=" col-md-12 text-center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3770.072082274408!2d74.73210247433454!3d19.10449345107914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bdcb07d76ddc4a1%3A0x7e8a5d2a19c41a33!2sSwasthya%20Hospital%20And%20Medical%20Research%20Center!5e0!3m2!1sen!2sin!4v1701763478377!5m2!1sen!2sin"  width="100%" height="600"  allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

    <section>
        <form action="/save_appointment" method="post">

        <div class="container-fluid bg-light mt-5 mb-0 p-5">
            <div class="row">
             <div class="col-md-8 ">
                 <div class="row">
                     <div class="col-md-12"><h2>Leave Us Message</h2></div>
                 </div>
                 <div class="row">
                     <div class="col-md-6 mt-4" >
                         <input type="text " placeholder="First Name" name="first_name" class="form-control"style="height:60px"/>
                     </div>
                     <div class="col-md-6 mt-4" >
                         <input type="text " placeholder="Last Name" name="last_name" class="form-control" style="height:60px"/>
                     </div>
                     <div class="col-md-6 mt-4" >
                         <input type="email " placeholder="Email" name="email" class="form-control"style="height:60px"/>
                     </div>
                     <div class="col-md-6 mt-4" >
                         <input type="number " placeholder="Phone" name="phone" class="form-control"style="height:60px"/>
                     </div>
                     <div class="col-md-6 mt-4">
                         <select style="height:40px" id="subject" name="subject" class="form-control" required>
                             <option value="" disabled selected>Select subject</option>
                             <option value="abhijit_pathak">Dr. Abhijit Pathak</option>
                             <option value="renuka_pathak">Dr. Renuka A Pathak</option>

                         </select>
                     </div>
                     <div class="col-md-12 mt-4">
                     <textarea class="form-control" placeholder="enter massage" name="message" rows="6"></textarea>
                     </div>
                     <div class="col-md-12 mt-4">
                        <% if(is_login) { %>

                     <button class="btn btn-primary btn-lg" onclick=" alert('your appointment is successfully submitted ')">Submit Message</button>
                     <%} 
                     else{%> <a href="/login"><button class="btn btn-primary" type="button">Please Login First then u can submit your form successfully</button></a><%}
                     %>
                    </div>

                 </div>
             </div>




             <div class="col-md-4 ">
                 <div class="row">
                     <div class="col-md-12 mt-4 text-justify"><h2>Address</h2></div>
                 </div>
                 <div class="row mt-4 ">
             
                       <div class="col-md-12 text-justify ">
                      <ul type="none">
                         <li style="font-size:25px;font-weight:bold;margin-top:8px;"><i class="fa-solid fa-location-dot" style="color:blue;margin-right:30px;"></i><%=contact.address%></li>
                          <li style="font-size:22px;font-weight:bold;margin-top:20px"><i class="fa-solid fa-envelope" style="color:blue;margin-right:30px;"></i><%=contact.email%></li>
                           <li style="font-size:22px;font-weight:bold;margin-top:20px"><i class="fa-solid fa-phone" style="color:blue;margin-right:30px;"></i><%=contact.phone%></li>

                      </ul>
                    
                 </div>
           
                 </div>


             </div>

            </div>
        </div>
    </form>
    
    </section> 

